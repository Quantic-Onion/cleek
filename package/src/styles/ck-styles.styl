@require './.variables'
@require '../../public/cleek-styles/cleek-mixins'

// "$color-primary": "#8687DA",
// "$color-secondary": "#4E4D86",


// group
.ck-component__group--left
  border-radius-right(0 !important)
  border-right 0 !important
.ck-component__group--right
  border-radius-left(0 !important)
.ck-component__group--center
  border-radius 0 !important
  border-right 0 !important

// group vertical
.ck-component__group-vertical--top
  border-bottom 0 !important
  border-radius-bottom(0 !important)
.ck-component__group-vertical--bottom
  border-radius-top(0 !important)
.ck-component__group-vertical--center
  border-radius 0 !important
  border-bottom 0 !important

// color
.ck-component__color--primary
  color $color-primary !important
.ck-component__color--primary-light
  color rgba($color-primary, .15) !important
.ck-component__color--secondary
  color $color-secondary !important
.ck-component__color--secondary-light
  color rgba($color-secondary, .15) !important
.ck-component__color--success
  color $color-success !important
.ck-component__color--danger
  color $color-danger !important
.ck-component__color--warning
  color $color-warning !important
.ck-component__color--dark
